{
  "name": "aws-proton-plugins-for-backstage",
  "version": "1.0.0",
  "repository": "https://github.com/awslabs/aws-proton-plugins-for-backstage.git",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "tsc": "lerna exec yarn tsc",
    "build": "lerna run build",
    "clean": "lerna run clean && lerna clean",
    "test": "lerna run test --stream",
    "lint": "lerna run lint",
    "ci": "lerna bootstrap && lerna exec yarn tsc && lerna run build && lerna run test --stream && lerna run lint",
    "start:frontend": "lerna run --scope @internal/plugin-aws-proton start --stream",
    "start:backend": "lerna run --scope @internal/plugin-aws-proton-backend start --stream",
    "bump-version": "lerna version",
    "link-packages": "yarn --cwd plugins/aws-proton link && yarn --cwd plugins/aws-proton-backend link"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
